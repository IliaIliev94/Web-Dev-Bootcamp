<%- include("partials/header") %>

<div class="ui text main container segment">
    <div class="ui huge header">Edit <%= blog.title %></div>
    <form action="/blogs/<%= blog._id %>?_method=PUT" method="POST" class="ui form">
        <div class="field">
            <label>Title</label>
            <input type="text" name="blog[title]" value="<%= blog.title %>">
        </div>
        <div class="field">
            <label for="">Image</label>
            <input type="text" name="blog[image]" value="<%= blog.image %>">
        </div>
        <div class="field">
            <label for="">Blog Content</label>
            <textarea name="blog[body]" cols="30" rows="10"><%= blog.body %></textarea>
        </div>
        <input class="ui violet big basic button" type="submit" value="Submit">
    </form>
</div>

<%- include("partials/footer") %>