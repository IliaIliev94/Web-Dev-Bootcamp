<%- include("partials/header") %>

<div class="ui main text segment container">
    <div class="ui huge header"><h1><%= blog.title %></h1></div>
        <div class="ui top attached">
                <div class="item">
                    <img class="ui centered rounded image" src="<%= blog.image %>">
                    <div class="content">
                        <span><%= blog.created.toDateString() %></span>
                    </div>
                    <div class="description">
                        <p><%- blog.body %></p>
                    </div>
                    <a href="/blogs/<%= blog._id %>/edit" class="ui button basic yellow tiny">Edit</a>
                    <form action="/blogs/<%= blog._id %>?_method=DELETE" method="POST" id="deleteForm">
                        <button type="submit" class="ui button basic orange tiny">Delete</button>
                    </form>
                </div>
        </div>
</div>


<%- include("partials/footer") %>