<%- include("../partials/header") %>

<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">YelpCamp</p>
            <div class="list-group">
                <li class="list-group-item active">Info 1</li>
                <li class="list-group-item">Info 2</li>
                <li class="list-group-item">Info 3</li>
            </div>
        </div>
        <div class="col-md-9">
            <div class="card">
                <img src="<%= campground.image %>" alt="" class="card-img-top">
                <div class="card-body">
                    <h4 class="float-right">$9.00/night</h4>
                    <h4 class="card-title"><a href=""><%= campground.name %></a></h4>
                    <p class="card-text"><%= campground.description %></p>
                </div>
            </div>
            <div class="card card-body bg-light my-3">
                <div class="text-right">
                    <a href="/campgrounds/<%= campground._id %>/comments/new" class="btn btn-success">Add New Comment</a>
                </div>
                <hr>
                <% campground.comments.forEach(comment => { %>
                    <div class="row">
                        <div class="col-md-12">
                            <strong><%= comment.author %></strong>
                            <span class="float-right">10 days ago</span>
                            <p style="margin-top: 0;">
                                <%= comment.text %>
                            </p>
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>
    </div>
</div>






<p>
    <a class="btn btn-primary" href="/campgrounds/<%= campground._id %>/comments/new">Add New Comment</a>
</p>


<%- include("../partials/footer") %>